~ Factorial Calculator Using Recursion ~

func factorial(n) {
    agar(n <= 1) {
        give 1
    }
    warna {
        give n * factorial(n - 1)
    }
}

Let num = 5
Let result = factorial(num)

out("Factorial of ")
out(num)
out(" is ")
out(result)

